<div class = "form-group row" >
	<label class="col-md-2 control-label" >測試名稱</label>	
	<div class = "col-md-5">
		<p name = "testcaseName" id ="testcaseName" class="form-control" data-tid = "{{testcase.t_id}}">{{testcase.name}}</p>
	</div>
</div>
<div class = "form-group row">
	<label class="col-md-2 control-label" >測試描述</label>	
	<div class = "col-md-8">
		<p name = "testcaseDescription" class="form-control">{{testcase.description}}</p>
	</div>
</div>	
<div class = "form-group row">
	<label class="col-md-2 control-label" >輸入資料</label>	
	<div class = "col-md-8">
		<p name = "testcaseInput_data" class="form-control" >{{testcase.input_data}}</p>
	</div>
</div>
<div class = "form-group row">
	<label class="col-md-2 control-label" >輸出結果</label>	
	<div class = "col-md-8">
		<p name = "testcaseExpected_results" class="form-control">{{testcase.expected_results}}</p>
	</div>
</div>	
<div class = "form-group row">
	<label class="col-md-2 control-label" >附　　件</label>	
	<div class = "col-md-8">
		<p name = "testcaseAttachment" class="form-control">{{testcase.attachment}}</p>
	</div>
</div>	
<div class = "form-group row">
	<label class="col-md-2 control-label" >關聯需求</label>	
	{% for relation in relationList%}
		<a class ="relation btn btn-xs btn-default" needValidate="{{relation.needValidate}}" data-rid="{{relation.r_id}}" >{{relation.name}}</a>
	{% endfor %}
</div>	