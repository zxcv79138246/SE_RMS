
<form class="form-horizontal" role="form" action="{{ site_url(['/testcasemanage/store']) }}" method="POST">
	<div class = "form-group row">
		<label class="col-md-2 control-label" >測試名稱</label>	
		<div class = "col-md-5">
			<input type ="text" name = "testcaseName" class="form-control">
		</div>
	</div>
	<div class = "form-group row">
		<label class="col-md-2 control-label" >測試描述</label>	
		<div class = "col-md-8">
			<textarea type ="text" name = "testcaseDescription" class="form-control"></textarea>
		</div>
	</div>	
	<div class = "form-group row">
		<label class="col-md-2 control-label" >輸入資料</label>	
		<div class = "col-md-8">
			<textarea type ="text" name = "testcaseInput_data" class="form-control"></textarea>
		</div>
	</div>
	<div class = "form-group row">
		<label class="col-md-2 control-label" >輸出結果</label>	
		<div class = "col-md-8">
			<textarea type ="text" name = "testcaseExpected_results" class="form-control"></textarea>
		</div>
	</div>	
	<div class = "form-group row">
		<label class="col-md-2 control-label" >附　　件</label>	
		<div class = "col-md-8">
			<input type ="text" name = "testcaseAttachment" class="form-control">
		</div>
	</div>		
	<button type="submit" class="btn btn-primary col-md-offset-10">Create</button>
</form>
