<form class="form-horizontal" role="form" action="{{ site_url(['/usermanage/update', user.u_id]) }}" method="POST">
	<div class="form-group">
		<label class="col-md-2 control-label">Name</label>
		<div class="col-md-3">
			<input type="text" class="form-control" name="name" value="{{ (validation_errors()) ? set_value('name') : user.name }}">
		</div>
	</div>
	<div class="form-group">
		<label class="col-md-2 control-label">Email</label>
		<div class="col-md-8">
			<input type="text" class="form-control" name="email" value="{{ (validation_errors()) ? set_value('email') : user.email }}">
		</div>
	</div>
	<div class="form-group">
		<label class="col-md-2 control-label">Password</label>
		<div class="col-md-6">
			<input type="text" class="form-control" name="password" value="{{ (validation_errors()) ? set_value('password') : user.password }}">
		</div>
	</div>
	<div class="form-group">
		<label class="col-md-2 control-label">Priority</label>
		<div class="col-md-3">
			<select class="form-control" name="priority">
				<option value="0" >一般使用者</option>
				<option value="1" >專案管理員s</option>
				<option value="2" >系統管理員</option>
			</select>
		</div>
	</div>
	<script type="text/javascript">
		$("[name='priority'] > [value='{{ user.priority }}']")[0].selected = true;
	</script>
	<button type="submit" class="btn btn-primary col-md-offset-10">Update</button>
</form>