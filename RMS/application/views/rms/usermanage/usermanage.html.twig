{% extends 'layout/layout.html.twig' %}
{% block content %}
	<div class="row col-md-10 col-md-offset-1 table-responsive">
		<table class="table table-hover">
			<tr>
				<th>U_ID</th>
				<th>Name</th>
				<th>Email</th>
				<th>Password</th>
				<th>Priority</th>
				<th>Edit</th>
				<th>Remove</th>
			{% for user in users %}
			<tr>
				<td>{{ user.u_id }}</td>
				<td>{{ user.name }}</td>
				<td>{{ user.email }}</td>
				<td>{{ user.password }}</td>
				<td>{{ user.priority }}</td>
				<td><a href="#" data-url="#" class="btn btn-info btn-xs edit-btn" data-toggle="modal" data-target=".edit-modal">Edit</a></td>
				<td><a href="#" class="btn btn-danger btn-xs">Remove</a></td>			
			</tr>
			{% endfor %}
		</table>
	</div>
{% endblock %}