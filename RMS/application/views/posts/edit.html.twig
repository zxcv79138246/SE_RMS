<form action="{{ site_url(['post/update', post.id]) }}" method="POST">
	<div class="form-group">
		<label for="">Title</label>
		<input type="text" class="form-control" name="title" placeholder="Title" value="{{ set_value('title') | default(post.title) }}">
	</div>
	<div class="form-group">
		<label for="">Body</label>
		<textarea class="form-control" rows="10" name="body" placeholder="leaving your message...">{{ set_value('body') | default(post.body) }}</textarea>
	</div>
	<button type="submit" class="btn btn-primary">Update</button>
</form>