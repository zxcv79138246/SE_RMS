{% extends 'layout/layout.html.twig' %}

{% block content %}
	{% if validation_errors() %}
		<div class="alert alert-danger alert-dismissible fade in" role="alert">
			<button type="button" class="close" data-dismiss="alert" aria-label="Close">
				<span aria-hidden="true">&times;</span>
			</button>
			{{ validation_errors() }}
		</div>
	{% endif %}
	{{ form_open('post/store') }}
		<div class="form-group">
			<label for="">Title</label>
			<input type="text" class="form-control" name="title" placeholder="Title" value="{{ set_value('title') }}">
		</div>
		<div class="form-group">
			<label for="">Body</label>
			<textarea class="form-control" rows="10" name="body" placeholder="leaving your message...">{{ set_value('body') }}</textarea>
		</div>
		<button type="submit" class="btn btn-primary">Publish</button>
	{{ form_close() }}
{% endblock %}